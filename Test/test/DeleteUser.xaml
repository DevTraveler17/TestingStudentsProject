<Window x:Class="test.DeleteUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeleteUser" Height="199" Width="450" ResizeMode="NoResize">
    <Grid Background="#FF212228">
        <TextBlock HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" TextWrapping="Wrap" Text="Удаление пользователя" VerticalAlignment="Top" Width="408" FontSize="14" Foreground="White"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Margin="10,51,0,0" Width="70" Height="30" Foreground="White" FontSize="20" FontFamily="Segoe UI Light"/>
        <TextBox x:Name="LoginText" HorizontalAlignment="Right" Height="30" Margin="0,51,38,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254" FontSize="20" Background="#FF323238" BorderThickness="0,1" Foreground="#FFC3C3C3"/>
        <Button Content="Удалить" Margin="0,0,38,10" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="80" Click="Button_Click" Background="#FFA2A2A2" Foreground="White"/>

    </Grid>
</Window>
