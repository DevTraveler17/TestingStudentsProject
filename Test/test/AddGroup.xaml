<Window x:Class="test.AddGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddGroup" Height="250" Width="483">
    <Grid Background="#FF212228">
        <TextBlock HorizontalAlignment="Left" Margin="10,76,0,0" TextWrapping="Wrap" Text="Название группы" VerticalAlignment="Top" Width="175" FontSize="22" Foreground="White" FontFamily="Segoe UI Light"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,20,0,0" TextWrapping="Wrap" Text="Добавление группы" VerticalAlignment="Top" Width="175" FontSize="16" Foreground="White" FontFamily="Segoe UI Light"/>
        <TextBox x:Name="GroupText" Height="29" Margin="0,76,10,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" Background="#FF17181E" Foreground="White" BorderThickness="0,1" FontFamily="Segoe UI Light" HorizontalAlignment="Right" Width="275"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="333,166,0,0" VerticalAlignment="Top" Width="111" Height="30" Background="#FF53545A" Foreground="#FFD6D6D6" FontSize="18" Click="Button_Click"/>

    </Grid>
</Window>
