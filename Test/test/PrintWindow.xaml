<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="test.PrintWindow"
	x:Name="Window"
	Title="PrintWindow"
	Width="600" Height="622" Background="{x:Null}" WindowStartupLocation="CenterScreen" SizeChanged="Window_SizeChanged">

    <Grid x:Name="LayoutRoot" Background="#FF212228" Margin="0">
        <Button Content="Печать" HorizontalAlignment="Right" Margin="0,0,25,25" Width="164" Background="#FF5D5E64" Foreground="White" FontSize="22" FontFamily="Segoe UI Light" Click="Button_Click" Height="36" VerticalAlignment="Bottom"/>
        <Grid Height="500" VerticalAlignment="Top">
            <FlowDocumentReader x:Name="MainFlowDocument1" Background="#FFE6E5E5" MinZoom="90" IsTwoPageViewEnabled="True"  BorderBrush="WhiteSmoke" BorderThickness="0" IsManipulationEnabled="True" Width="592" Height="500"/>
        </Grid>
    </Grid>
</Window>